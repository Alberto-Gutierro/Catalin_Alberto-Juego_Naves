<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameOverController">
   <children>
      <Rectangle arcHeight="50.0" arcWidth="50.0" fill="#807f7f" height="400.0" stroke="BLACK" strokeMiterLimit="15.0" strokeType="INSIDE" strokeWidth="2.0" width="600.0" />
      <Text fx:id="tv_gameOver" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Over" textAlignment="CENTER" wrappingWidth="600.0">
         <font>
            <Font name="Franklin Gothic Demi Cond" size="72.0" />
         </font>
         <fill>
            <RadialGradient centerX="0.5111111111111111" centerY="0.8714285714285714" radius="0.5">
               <stops>
                  <Stop color="RED" />
                  <Stop color="BLACK" offset="1.0" />
               </stops>
            </RadialGradient>
         </fill>
      </Text>
       <Text fx:id="tv_score" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Score: 00000" textAlignment="CENTER" wrappingWidth="600.0">
           <font>
               <Font size="36.0" />
           </font>
       </Text>
      <Button blendMode="MULTIPLY" layoutX="347.0" layoutY="260.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="100.0" prefWidth="200.0" text="Exit">
         <font>
            <Font name="Arial" size="36.0" />
         </font>
      </Button>
      <Button blendMode="MULTIPLY" layoutX="53.0" layoutY="260.0" mnemonicParsing="false" onAction="#restartGame" prefHeight="100.0" prefWidth="200.0" text="Restart">
         <font>
            <Font name="Arial" size="36.0" />
         </font>
      </Button>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</AnchorPane>
