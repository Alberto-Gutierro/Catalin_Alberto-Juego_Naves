<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameOverController">
   <children>
      <Rectangle arcWidth="5.0" fill="#979797" height="400.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0" width="600.0" />
      <Text layoutX="153.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Over">
         <font>
            <Font name="Franklin Gothic Demi Cond" size="72.0" />
         </font>
      </Text>
       <Text fx:id="score" layoutX="199.0" layoutY="214.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Score: 00000">
           <font>
               <Font size="36.0" />
           </font>
       </Text>
      <Button layoutX="347.0" layoutY="260.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="100.0" prefWidth="200.0" text="Exit">
         <font>
            <Font name="Arial" size="36.0" />
         </font>
      </Button>
      <Button layoutX="53.0" layoutY="260.0" mnemonicParsing="false" onAction="#restartGame" prefHeight="100.0" prefWidth="200.0" text="Restart">
         <font>
            <Font name="Arial" size="36.0" />
         </font>
      </Button>
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</AnchorPane>
